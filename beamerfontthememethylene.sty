\usepackage{fontspec}


\setsansfont{Lato Light}
\usefonttheme[onlymath]{serif}

\setbeamerfont*{title}{family=\fontspec{Lato Bold},size*={18pt}{20pt}}
\setbeamerfont*{author}{family=\fontspec{Lato},size*={12pt}{12pt}}
\setbeamerfont*{institute}{family=\fontspec{Lato},size*={8pt}{12pt}}
\setbeamerfont*{date}{family=\fontspec{Lato Light},size*={8pt}{10pt}}



\setbeamerfont*{frametitle}{family=\fontspec{Lato Bold},size=\large}
\setbeamerfont*{framesubtitle}{family=\fontspec{Lato},size=\small}
\setbeamerfont*{footnote}{family=\fontspec{Lato},size=\tiny}
\setbeamerfont*{caption name}{family=\fontspec{Lato},size*={10pt}{10pt}}
\setbeamerfont*{caption}{family=\fontspec{Lato Light},size*={10pt}{10pt}}
\setbeamerfont*{citation name}{family=\fontspec{Lato Light}}


\setbeamerfont{bibliography item}{size=\footnotesize}
\setbeamerfont{bibliography entry author}{size=\footnotesize}
\setbeamerfont{bibliography entry title}{size=\footnotesize}
\setbeamerfont{bibliography entry location}{size=\footnotesize}
\setbeamerfont{bibliography entry note}{size=\footnotesize}

